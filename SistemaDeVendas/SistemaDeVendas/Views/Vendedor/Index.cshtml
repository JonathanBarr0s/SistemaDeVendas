@model List<SistemaDeVendas.Models.Vendedor>

<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Vendedores</h1>
	<p class="mb-4">
		DataTables is a third party plugin that is used to generate the demo table below.
		For more information about DataTables, please visit the <a target="_blank"
																   href="https://datatables.net">official DataTables documentation</a>.
	</p>

	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3 d-flex justify-content-between align-items-center">
			<h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
			<a class="btn btn-primary" asp-controller="Vendedor" asp-action="NovoVendedor">Adicionar</a>
		</div>

		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Nome</th>
							<th>Email</th>
							<th style="width: 90px;">Ações</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var vendedor in Model)
						{
							<tr>
								<td>@vendedor.Nome @vendedor.Sobrenome</td>
								<td>@vendedor.Email</td>
								<td>
									<a asp-action="EditarVendedor" asp-controller="Vendedor" asp-route-id="@vendedor.Id" class="btn btn-warning btn-circle btn-sm">
										<i class="fas fa-pencil-alt"></i>
									</a>
									<a asp-action="DeletarVendedor" asp-controller="Vendedor" asp-route-id="@vendedor.Id" class="btn btn-danger btn-circle btn-sm">
										<i class="fas fa-trash"></i>
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>