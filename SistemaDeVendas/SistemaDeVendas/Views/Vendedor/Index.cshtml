@model List<SistemaDeVendas.Models.Vendedor>

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Vendedores</h1>

    <br />

    <div class="card shadow mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <form asp-controller="Vendedor"
                  asp-action="Index"
                  method="get"
                  class="form-inline w-50">

                <div class="input-group w-100">

                    <input type="text"
                           name="termo"
                           value="@ViewBag.Termo"
                           class="form-control bg-light border-0"
                           placeholder="Pesquisar por nome..." />

                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>

                </div>
            </form>

            <a class="btn btn-primary"
               asp-controller="Vendedor"
               asp-action="NovoVendedor">
                Adicionar
            </a>

        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th class="col-nome">Nome</th>
                            <th class="col-email">Email</th>
                            <th class="col-acoes">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var vendedor in Model)
                            {
                                <tr>
                                    <td>@vendedor.Nome @vendedor.Sobrenome</td>
                                    <td>@vendedor.Email</td>
                                    <td class="text-center">
                                        <a asp-action="EditarVendedor"
                                           asp-controller="Vendedor"
                                           asp-route-id="@vendedor.Id"
                                           class="btn btn-warning btn-circle btn-sm">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>

                                        <a asp-action="DeletarVendedor"
                                           asp-controller="Vendedor"
                                           asp-route-id="@vendedor.Id"
                                           class="btn btn-danger btn-circle btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        } else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">
                                    Nenhum vendedor encontrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    @if (ViewBag.TotalPaginas > 1)
    {
        <nav aria-label="Paginação de vendedores">
            <ul class="pagination justify-content-center">

                <li class="page-item @(ViewBag.PaginaAtual == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(ViewBag.PaginaAtual - 1)"
                       asp-route-termo="@ViewBag.Termo">
                        Anterior
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pagina="@i"
                           asp-route-termo="@ViewBag.Termo">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(ViewBag.PaginaAtual == ViewBag.TotalPaginas ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(ViewBag.PaginaAtual + 1)"
                       asp-route-termo="@ViewBag.Termo">
                        Próxima
                    </a>
                </li>

            </ul>
        </nav>
    }

</div>

<style>

    .col-nome {
        width: 300px;
    }

    .col-email {
        width: 700px;
    }

    .col-acoes {
        width: 90px;
    }
</style>