@model List<SistemaDeVendas.Models.Vendedor>

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Vendedores</h1>

    <br />

    <div class="card shadow mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <form asp-controller="Vendedor"
                  asp-action="Index"
                  method="get"
                  class="form-inline w-50">

                <div class="input-group w-100">

                    <input type="text"
                           name="termo"
                           value="@ViewBag.Termo"
                           class="form-control bg-light border-0"
                           placeholder="Pesquisar por nome..." />

                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>

                </div>
            </form>

            <a class="btn btn-primary"
               asp-controller="Vendedor"
               asp-action="NovoVendedor">
                Adicionar
            </a>

        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th class="col-nome">Nome</th>
                            <th class="col-email">Email</th>
                            <th class="col-acoes">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var vendedor in Model)
                            {
                                <tr>
                                    <td>@vendedor.Nome @vendedor.Sobrenome</td>
                                    <td>@vendedor.Email</td>
                                    <td class="text-center">
                                        <a asp-action="EditarVendedor"
                                           asp-controller="Vendedor"
                                           asp-route-id="@vendedor.Id"
                                           class="btn btn-warning btn-circle btn-sm">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>

                                        <button type="button"
                                                class="btn btn-danger btn-circle btn-sm"
                                                data-toggle="modal"
                                                data-target="#deleteVendedorModal"
                                                data-id="@vendedor.Id"
                                                data-nome="@vendedor.Nome @vendedor.Sobrenome">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        } else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">
                                    Nenhum vendedor encontrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    @if (ViewBag.TotalPaginas > 1)
    {
        <nav aria-label="Paginação de vendedores">
            <ul class="pagination justify-content-center">

                <li class="page-item @(ViewBag.PaginaAtual == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(ViewBag.PaginaAtual - 1)"
                       asp-route-termo="@ViewBag.Termo">
                        Anterior
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pagina="@i"
                           asp-route-termo="@ViewBag.Termo">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(ViewBag.PaginaAtual == ViewBag.TotalPaginas ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(ViewBag.PaginaAtual + 1)"
                       asp-route-termo="@ViewBag.Termo">
                        Próxima
                    </a>
                </li>

            </ul>
        </nav>
    }

</div>

<!-- MODAL DE CONFIRMAÇÃO DE EXCLUSÃO -->
<div class="modal fade" id="deleteVendedorModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Confirmar exclusão</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>

            <div class="modal-body">
                Tem certeza que deseja excluir o vendedor
                <strong id="vendedorNome"></strong>?
            </div>

            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-dismiss="modal">
                    Cancelar
                </button>

                <form asp-controller="Vendedor"
                      asp-action="DeletarVendedor"
                      method="post">

                    @Html.AntiForgeryToken()

                    <input type="hidden" name="Id" id="vendedorId" />

                    <button type="submit" class="btn btn-danger">
                        Excluir
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#deleteVendedorModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);

            var id = button.data('id');
            var nome = button.data('nome');

            $('#vendedorId').val(id);
            $('#vendedorNome').text(nome);
        });
    </script>
}

<style>
    .col-nome {
        width: 300px;
    }

    .col-email {
        width: 700px;
    }

    .col-acoes {
        width: 90px;
    }
</style>
