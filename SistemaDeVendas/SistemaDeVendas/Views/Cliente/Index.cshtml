@model List<SistemaDeVendas.Models.Cliente>

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Clientes</h1>

    <br />

    <div class="card shadow mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <form asp-controller="Cliente"
                  asp-action="Index"
                  method="get"
                  class="form-inline w-50">

                <div class="input-group w-100">

                    <input type="text"
                           name="termo"
                           value="@ViewBag.Termo"
                           class="form-control bg-light border-0"
                           placeholder="Pesquisar por nome..." />

                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>

                </div>
            </form>

            <a class="btn btn-primary"
               asp-controller="Cliente"
               asp-action="NovoCliente">
                Adicionar
            </a>

        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th class="col-nome">Nome</th>
                            <th class="col-email">Email</th>
                            <th class="col-cpf">CPF</th>
                            <th class="col-telefone">Telefone</th>
                            <th style="width: 90px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var cliente in Model)
                            {
                                <tr>
                                    <td>@cliente.Nome @cliente.Sobrenome</td>
                                    <td>@cliente.Email</td>

                                    <td>
                                        @{
                                            string cpf = cliente.CPF;
                                            string cpfFormatado = cpf;

                                            if (!string.IsNullOrEmpty(cpf) && cpf.Length == 11)
                                            {
                                                cpfFormatado = Convert
                                                .ToUInt64(cpf)
                                                .ToString(@"000\.000\.000\-00");
                                            }
                                        }
                                        @cpfFormatado
                                    </td>

                                    <td>
                                        @{
                                            string tel = cliente.Telefone;
                                            string telFormatado = tel;

                                            if (!string.IsNullOrEmpty(tel))
                                            {
                                                if (tel.Length == 11)
                                                {
                                                    telFormatado = Convert
                                                    .ToUInt64(tel)
                                                    .ToString(@"(00) 00000-0000");
                                                } else if (tel.Length == 10)
                                                {
                                                    telFormatado = Convert
                                                    .ToUInt64(tel)
                                                    .ToString(@"(00) 0000-0000");
                                                }
                                            }
                                        }
                                        @telFormatado
                                    </td>

                                    <td class="text-center">
                                        <a asp-action="EditarCliente"
                                           asp-controller="Cliente"
                                           asp-route-id="@cliente.Id"
                                           class="btn btn-warning btn-circle btn-sm">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>

                                        <button type="button"
                                                class="btn btn-danger btn-circle btn-sm"
                                                data-toggle="modal"
                                                data-target="#deleteClienteModal"
                                                data-id="@cliente.Id"
                                                data-nome="@cliente.Nome @cliente.Sobrenome">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        } else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    Nenhum cliente encontrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    @if (ViewBag.TotalPaginas > 1)
    {
        <nav aria-label="Paginação de clientes">
            <ul class="pagination justify-content-center">

                <li class="page-item @(ViewBag.PaginaAtual == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(ViewBag.PaginaAtual - 1)"
                       asp-route-termo="@ViewBag.Termo">
                        Anterior
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pagina="@i"
                           asp-route-termo="@ViewBag.Termo">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(ViewBag.PaginaAtual == ViewBag.TotalPaginas ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(ViewBag.PaginaAtual + 1)"
                       asp-route-termo="@ViewBag.Termo">
                        Próxima
                    </a>
                </li>

            </ul>
        </nav>
    }

</div>

<div class="modal fade" id="deleteClienteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Confirmar exclusão</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>

            <div class="modal-body">
                Tem certeza que deseja excluir o cliente
                <strong id="clienteNome"></strong>?
            </div>

            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-dismiss="modal">
                    Cancelar
                </button>

                <form asp-controller="Cliente"
                      asp-action="DeletarCliente"
                      method="post">

                    @Html.AntiForgeryToken()

                    <input type="hidden" name="Id" id="clienteId" />

                    <button type="submit" class="btn btn-danger">
                        Excluir
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

@if (TempData["ErroCliente"] != null)
{
    <div class="modal fade show"
         id="erroClienteModal"
         tabindex="-1"
         role="dialog"
         style="display:block; background-color: rgba(0,0,0,0.5);">

        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Ação não permitida</h5>
                    <button type="button"
                            class="close"
                            onclick="$('#erroClienteModal').hide();">
                        <span>×</span>
                    </button>
                </div>

                <div class="modal-body">
                    @TempData["ErroCliente"]
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            onclick="$('#erroClienteModal').hide();">
                        Fechar
                    </button>
                </div>

            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $('#deleteClienteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);

            var id = button.data('id');
            var nome = button.data('nome');

            $('#clienteId').val(id);
            $('#clienteNome').text(nome);
        });
    </script>
}

<style>
    .col-nome {
        width: 300px;
    }

    .col-email {
        width: 500px;
    }

    .col-cpf {
        width: 150px;
    }

    .col-telefone {
        width: 150px;
    }
</style>
