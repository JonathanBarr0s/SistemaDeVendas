@model List<SistemaDeVendas.Models.Cliente>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Clientes</h1>

    <br />

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Clientes</h6>
            <a class="btn btn-primary" asp-controller="Cliente" asp-action="NovoCliente">Adicionar</a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>CPF</th>
                            <th>Telefone</th>
                            <th style="width: 90px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nome @cliente.Sobrenome</td>
                                <td>@cliente.Email</td>
                                <td>
                                    @{
                                        string doc = cliente.CPF;
                                        string cpfFormatado = doc;

                                        if (!string.IsNullOrEmpty(doc))
                                        {
                                            cpfFormatado = Convert.ToUInt64(doc).ToString(@"000\.000\.000\-00");
                                        }
                                    }
                                    @cpfFormatado
                                </td>
                                <td>
                                    @{
                                        string tel = cliente.Telefone;
                                        string telFormatado = tel;

                                        if (!string.IsNullOrEmpty(tel))
                                        {
                                            if (doc.Length == 11)
                                            {
                                                telFormatado = Convert.ToUInt64(tel).ToString(@"(00) 00000-0000");
                                            } else if (doc.Length == 10)
                                            {
                                                telFormatado = Convert.ToUInt64(tel).ToString(@"(00) 0000-0000");
                                            }
                                        }
                                    }
                                    @telFormatado
                                </td>
                                <td>
                                    <a asp-action="EditarCliente" asp-controller="Cliente" asp-route-id="@cliente.Id" class="btn btn-warning btn-circle btn-sm">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="DeletarCliente" asp-controller="Cliente" asp-route-id="@cliente.Id" class="btn btn-danger btn-circle btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    @if (ViewBag.TotalPaginas > 1)
    {
        <nav aria-label="Paginação de clientes">
            <ul class="pagination justify-content-center">

                <!-- Página anterior -->
                <li class="page-item @(ViewBag.PaginaAtual == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(ViewBag.PaginaAtual - 1)">
                        Anterior
                    </a>
                </li>

                <!-- Números das páginas -->
                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pagina="@i">
                            @i
                        </a>
                    </li>
                }

                <!-- Próxima página -->
                <li class="page-item @(ViewBag.PaginaAtual == ViewBag.TotalPaginas ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(ViewBag.PaginaAtual + 1)">
                        Próxima
                    </a>
                </li>

            </ul>
        </nav>
    }


</div>