@model SistemaDeVendas.Models.ClienteModel
@{
	Layout = "_Layout";
}

<h3 class="mb-4">Editar Cliente</h3>

<div class="container mt-4">
	<form asp-action="EditarCliente" asp-controller="Cliente" method="post" class="needs-validation">
		<input asp-for="Id" type="hidden" />

		<div class="form-group mb-3">
			<label asp-for="Nome"></label>
			<input asp-for="Nome" class="form-control" placeholder="Digite o nome" />
			<span asp-validation-for="Nome" class="text-danger"></span>
		</div>

		<div class="form-group mb-3">
			<label asp-for="CPF_CNPJ"></label>
			<input asp-for="CPF_CNPJ" class="form-control" placeholder="Digite o CPF ou CNPJ" />
			<span asp-validation-for="CPF_CNPJ" class="text-danger"></span>
		</div>

		<div class="form-group mb-3">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control" placeholder="Digite o e-mail" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="form-group mb-3">
			<label asp-for="Senha"></label>
			<input asp-for="Senha" class="form-control" placeholder="Digite a senha" />
			<span asp-validation-for="Senha" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Salvar Alterações</button>
		<a asp-action="Index" asp-controller="Cliente" class="btn btn-secondary">Cancelar</a>
	</form>
</div>
