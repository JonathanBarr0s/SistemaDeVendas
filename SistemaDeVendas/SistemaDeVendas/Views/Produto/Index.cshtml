@model List<SistemaDeVendas.Models.Produto>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Produtos</h1>
    <p class="mb-4">

    </p>

    <div class="card shadow mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <form asp-controller="Produto"
                  asp-action="Index"
                  method="get"
                  class="form-inline w-25">

                <div class="input-group w-100">
                    <input type="text"
                           name="termo"
                           value="@Context.Request.Query["termo"]"
                           class="form-control bg-light border-0"
                           placeholder="Pesquisar por título...">

                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </form>

            <a class="btn btn-primary"
               asp-controller="Produto"
               asp-action="NovoProduto">
                Adicionar
            </a>

        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th class="col-fotos">Foto</th>
                            <th>Nome</th>
                            <th class="col-descricao">Descrição</th>
                            <th class="col-estoque">Estoque</th>
                            <th>Preço</th>
                            <th style="width: 90px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var produto in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(produto.Link_Foto))
                                    {
                                        <img src="@produto.Link_Foto"
                                             class="img-fluid rounded"
                                             style="max-width: 240px; max-height: 160px; object-fit: cover;"
                                             alt="Foto do produto" />
                                    } else
                                    {
                                        <div class="sem-foto">Sem foto</div>
                                    }
                                </td>
                                <td class="linha-titulo">@produto.Nome</td>
                                <td class="linha-descricao">@produto.Descricao</td>
                                <td class="text-center">@produto.Quantidade_Estoque unidades</td>
                                <td class="linha-preços">@produto.Preco_Unitario?.ToString("C2")</td>
                                <td class="col-acoes">
                                    <div class="d-flex flex-column align-items-center gap-2">

                                        <a asp-action="EditarProduto"
                                           asp-controller="Produto"
                                           asp-route-id="@produto.Id"
                                           class="btn btn-warning btn-sm w-100">
                                            <i class="fas fa-pencil-alt"></i> Editar
                                        </a>

                                        <br />

                                        <a asp-action="DeletarProduto"
                                           asp-controller="Produto"
                                           asp-route-id="@produto.Id"
                                           class="btn btn-danger btn-sm w-100"
                                           onclick="return confirm('Deseja realmente excluir este produto?');">
                                            <i class="fas fa-trash"></i> Excluir
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    #dataTable tbody tr {
        height: 180px; /* altura fixa da linha */
    }

    #dataTable tbody td {
        vertical-align: middle;
    }

    .col-fotos {
        width: 100px;
    }

    .col-estoque {
        width: 150px;
    }

    .linha-descricao {
        vertical-align: top !important;
        text-align: left;
    }

    .linha-titulo {
        font-weight: bold;
        vertical-align: top !important;
        text-align: left;
    }

    .linha-preços {
        font-weight: bold;
        width: 150px;
    }

    .sem-foto {
        vertical-align: center !important;
        text-align: center;
        font-weight: bold;
    }
</style>