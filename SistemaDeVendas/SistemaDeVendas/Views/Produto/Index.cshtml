@model List<SistemaDeVendas.Models.Produto>

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Produtos</h1>
    <p class="mb-4">

    </p>

    <div class="card shadow mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <form asp-controller="Produto"
                  asp-action="Index"
                  method="get"
                  class="form-inline w-50">

                <div class="input-group w-100">

                    <input type="text"
                           name="termo"
                           value="@Context.Request.Query["termo"]"
                           class="form-control bg-light border-0"
                           placeholder="Pesquisar por título..." />

                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>

                    <a class="btn btn-primary ml-2"
                       asp-controller="Produto"
                       asp-action="Index"
                       asp-route-estoqueZero="true">
                        Sem Estoque
                    </a>

                </div>
            </form>

            <a class="btn btn-primary"
               asp-controller="Produto"
               asp-action="NovoProduto">
                Adicionar
            </a>

        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th class="col-fotos">Foto</th>
                            <th class="col-titulo">Nome</th>
                            <th class="col-descricao">Descrição</th>
                            <th class="col-estoque">Estoque</th>
                            <th>Preço</th>
                            <th style="width: 90px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var produto in Model)
                        {
                            <tr>
                                <td class="foto-produto">
                                    @if (!string.IsNullOrEmpty(produto.Link_Foto))
                                    {
                                        <img src="@Url.Content(produto.Link_Foto)"
                                             class="img-fluid rounded"
                                             style="max-width: 240px; max-height: 160px; object-fit: cover;"
                                             alt="Foto do produto" />
                                    } else
                                    {
                                        <div class="sem-foto">Sem foto</div>
                                    }
                                </td>
                                <td class="linha-titulo">@produto.Nome</td>
                                <td class="linha-descricao">@produto.Descricao</td>
                                <td class="text-center">@produto.Quantidade_Estoque unidades</td>
                                <td class="linha-preços">@produto.Preco_Unitario?.ToString("C2")</td>
                                <td class="col-acoes">
                                    <div class="d-flex flex-column align-items-center gap-2">

                                        <a asp-action="EditarProduto"
                                           asp-controller="Produto"
                                           asp-route-id="@produto.Id"
                                           class="btn btn-warning btn-sm w-100">
                                            <i class="fas fa-pencil-alt"></i> Editar
                                        </a>

                                        <br />

                                        <button type="button"
                                                class="btn btn-danger btn-sm w-100"
                                                data-toggle="modal"
                                                data-target="#deleteProdutoModal"
                                                data-id="@produto.Id"
                                                data-nome="@produto.Nome">
                                            <i class="fas fa-trash"></i> Excluir
                                        </button>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteProdutoModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Confirmar exclusão</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>

            <div class="modal-body">
                Tem certeza que deseja excluir o produto
                <strong id="produtoNome"></strong>?
            </div>

            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-dismiss="modal">
                    Cancelar
                </button>

                <form asp-controller="Produto"
                      asp-action="DeletarProduto"
                      method="post">

                    @Html.AntiForgeryToken()

                    <input type="hidden" name="id" id="produtoId" />

                    <button type="submit" class="btn btn-danger">
                        Excluir
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

<nav>
    <ul class="pagination justify-content-center">

        <li class="page-item @(ViewBag.PaginaAtual == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-route-pagina="@(ViewBag.PaginaAtual - 1)"
               asp-route-termo="@ViewBag.Termo"
               asp-route-estoqueZero="@ViewBag.EstoqueZero">
                Anterior
            </a>
        </li>

        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
        {
            <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                <a class="page-link"
                   asp-route-pagina="@i"
                   asp-route-termo="@ViewBag.Termo"
                   asp-route-estoqueZero="@ViewBag.EstoqueZero">
                    @i
                </a>
            </li>
        }

        <li class="page-item @(ViewBag.PaginaAtual == ViewBag.TotalPaginas ? "disabled" : "")">
            <a class="page-link"
               asp-route-pagina="@(ViewBag.PaginaAtual + 1)"
               asp-route-termo="@ViewBag.Termo"
               asp-route-estoqueZero="@ViewBag.EstoqueZero">
                Próxima
            </a>
        </li>

    </ul>
</nav>

@section Scripts {
    <script>
        $('#deleteProdutoModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);

            var produtoId = button.data('id');
            var produtoNome = button.data('nome');

            $('#produtoId').val(produtoId);
            $('#produtoNome').text(produtoNome);
        });
    </script>
}

@if (TempData["ErroProduto"] != null)
{
    <div class="modal fade show"
         id="erroProdutoModal"
         tabindex="-1"
         role="dialog"
         style="display:block; background-color: rgba(0,0,0,0.5);">

        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Ação não permitida</h5>
                    <button type="button"
                            class="close"
                            onclick="$('#erroProdutoModal').hide();">
                        <span>×</span>
                    </button>
                </div>

                <div class="modal-body">
                    @TempData["ErroProduto"]
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            onclick="$('#erroProdutoModal').hide();">
                        Fechar
                    </button>
                </div>

            </div>
        </div>
    </div>
}

<style>
    #dataTable tbody tr {
        height: 180px;
    }

    #dataTable tbody td {
        vertical-align: middle;
    }

    .col-fotos {
        width: 100px;
    }

    .col-estoque {
        width: 150px;
    }

    .linha-descricao {
        vertical-align: top !important;
        text-align: left;
    }

    .linha-titulo {
        font-weight: bold;
        vertical-align: top !important;
        text-align: left;
    }

    .linha-preços {
        font-weight: bold;
        width: 150px;
    }

    .sem-foto {
        vertical-align: center !important;
        text-align: center;
        font-weight: bold;
    }

    .foto-produto {
        vertical-align: center !important;
        text-align: center;
    }

    .col-titulo {
        width: 250px;
    }
</style>