@model SistemaDeVendas.Models.ProdutoModel

<h3 class="mb-4">Cadastro de Produtos</h3>

<br />

<div class="container mt-4">
	@using (Html.BeginForm("NovoProduto", "Produto", FormMethod.Post, new { @class = "needs-validation" }))
	{
		<div class="form-group mb-3">
			Nome:
			@Html.TextBoxFor(m => m.Nome, new { @class = "form-control", placeholder = "Digite o nome" })
			@Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
		</div>

		<div class="form-group mb-3">
			Descrição:
			@Html.TextBoxFor(m => m.Descricao, new { @class = "form-control", placeholder = "Digite a descrição" })
			@Html.ValidationMessageFor(m => m.Descricao, "", new { @class = "text-danger" })
		</div>

		<div class="form-group mb-3">
			Preço Unitário:
			@Html.TextBoxFor(m => m.Preco_Unitario, new { @class = "form-control", placeholder = "Digite o preço unitário", id = "Preco_Unitario" })
			@Html.ValidationMessageFor(m => m.Preco_Unitario, "", new { @class = "text-danger" })
		</div>

		<div class="form-group mb-3">
			Quantidade Estoque:
			@Html.TextBoxFor(m => m.Quantidade_Estoque, new { @class = "form-control", placeholder = "Digite a quantidade em estoque", id = "Quantidade_Estoque" })
			@Html.ValidationMessageFor(m => m.Quantidade_Estoque, "", new { @class = "text-danger" })
		</div>

		<a href="@Url.Action("Index", "Produto")" class="btn btn-secondary">Cancelar</a>
		<button type="submit" class="btn btn-primary">Salvar</button>
	}
</div>

@section Scripts {
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
	<script>
		$(document).ready(function () {
			$('#Preco_Unitario').mask("#.##0,00", { reverse: true });
			$('#Quantidade_Estoque').mask("#.##0,00", { reverse: true });
		});
	</script>
}
